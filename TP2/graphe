library(ggplot2)

perf <- read.table("perf_facet.dat", header = TRUE)
ggplot(perf,aes(x=taille, y=mem, group=nom_tri, colour=nom_tri)) + geom_point() + geom_smooth() + ggtitle("Consommation mémoire par type de tableau et par tri") + facet_grid( nom_tri ~ type_tab)
ggsave("graphe_facet_mem.png")



library(ggplot2)

/-----Pour fusion rapide et radix
perf <- read.table("perf_c_d.dat", header = TRUE)
ggplot(perf,aes(x=taille, y=temps, group=nom_tri, colour=nom_tri)) + geom_point() + geom_smooth() + ggtitle("Temps d'execution par type de tri pour les tableaux combinant les types croissant et décroissant")
ggsave("graphe_c_d.png")

/-----Pour fusion rapide et radix
perf <- read.table("perf_c_a.dat", header = TRUE)
ggplot(perf,aes(x=taille, y=temps, group=nom_tri, colour=nom_tri)) + geom_point() + geom_smooth() + ggtitle("Temps d'execution par type de tri pour les tableaux combinant les types croissant et aléatoire")
ggsave("graphe_c_a.png")

/-----Pour fusion et inser
perf <- read.table("perf_c_u.dat", header = TRUE)
ggplot(perf,aes(x=taille, y=temps, group=nom_tri, colour=nom_tri)) + geom_point() + geom_smooth() + ggtitle("Temps d'execution par type de tri pour les tableaux combinant les types croissant et constant")
ggsave("graphe_c_u.png")

/-----Pour fusion rapide et radix
perf <- read.table("perf_d_a.dat", header = TRUE)
ggplot(perf,aes(x=taille, y=temps, group=nom_tri, colour=nom_tri)) + geom_point() + geom_smooth() + ggtitle("Temps d'execution par type de tri pour les tableaux combinant les types décroissant et aléatoire")
ggsave("graphe_d_a.png")
